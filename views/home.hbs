<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{blogHome}}</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;1,600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/home.css">
</head>

<body>

    <nav class="navbar">
    <img src="logo.png" class="logo" alt="">
    <ul class="links-container">
        <li class="link-item"><a href="/register" class="link">Register</a></li>
        {{!-- <li class="link-item"><a href="/" class="link">Home</a></li> --}}
        {{#if isLoggedInAdmin}}
            <!-- Admin is logged in -->
            <li class="link-item"><a href="/admin" class="link">Dashboard</a></li>
            <li class="link-item"><a href="/login" class="link">User Login</a></li>
            <li class="link-item"><a href="/logout" class="link">Logout</a></li>
        {{else if isLoggedIn}}
            <!-- Regular user is logged in -->
            <li class="link-item"><a href="/myBlogs" class="link">My Blogs</a></li>
            <li class="link-item"><a href="/logout" class="link">Logout</a></li>
        {{else}}
            <!-- No one is logged in -->
            <li class="link-item"><a href="/login" class="link">User Login</a></li>
            <li class="link-item"><a href="/admin" class="link">Admin Login</a></li>
        {{/if}}
    </ul>
</nav>



    <header class="header">
        <div class="content">
            <h1 class="heading">
                <span class="small">Welcome To The World Of</span>
                blog writing
                {{!-- <span class="no-fill"></span> --}}
            </h1>
            <a href="/addBlog" class="btn dark">Write a blog</a>
        </div>
    </header>


    <section class="blogs-section">
        {{#each latestBlog as |blog|}}
        {{#if blog.approved }}
        <div class="blog-card">
            <img src="{{blog.imageURL}}" class="blog-image" alt="">
            <h1 class="blog-title">Title: {{blog.title}}</h1>
            <div class="desc-container"><p class="blog-overview">Description: {{blog.desc}}</p></div>
            <p class="blog-overview">Author: {{blog.user.username}}</p>
            <a href="/readMore/{{blog.id}}" class="btn dark">Read more</a> <!-- Updated link -->
        </div>
        {{/if}}
        {{/each}}
    </section>


</body>

</html>
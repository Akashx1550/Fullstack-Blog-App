<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{blog.title}}</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;1,600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/readMore.css">
</head>

<body>

    <nav class="navbar">
        <img src="../logo.png" class="logo" alt="logo">
        <ul class="links-container">
            <li class="link-item"><a href="/register" class="link">Register</a></li>
            <li class="link-item"><a href="/" class="link">Home</a></li>
            {{#if isLoggedInAdmin}}
            <!-- Admin is logged in -->
            <li class="link-item"><a href="/admin" class="link">Dashboard</a></li>
            <li class="link-item"><a href="/login" class="link">User Login</a></li>
            <li class="link-item"><a href="/logout" class="link">Logout</a></li>
            {{else if isLoggedIn}}
            <!-- Regular user is logged in -->
            <li class="link-item"><a href="/myBlogs" class="link">My Blogs</a></li>
            <li class="link-item"><a href="/logout" class="link">Logout</a></li>
            {{else}}
            <!-- No one is logged in -->
            <li class="link-item"><a href="/login" class="link">User Login</a></li>
            {{!-- <li class="link-item"><a href="/admin" class="link">Admin Login</a></li> --}}
            {{/if}}
        </ul>
    </nav>

    <section class="blogs-section">
        {{#if blog}}
        <div class="blog-card">
            <img src="{{blog.imageURL}}" class="blog-image" alt="">
            <h1 class="blog-title">Title: {{blog.title}}</h1>
            <p class="blog-overview">Description: {{blog.desc}}</p>
            <p class="blog-author">Author: {{blog.user.username}}</p>
            {{!-- <a href="/" class="btn dark">Read more</a> --}}
        </div>
        {{/if}}

    </section>

</body>

</html>